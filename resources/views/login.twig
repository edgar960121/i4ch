<body class="login-body">

{% include 'partials.header' %}
<main id="main-login" class="row">
    <div class="login-content">
        <div class="pane pane-basic login-box">
            <div class="pane-header">
                <h2>
                    Iniciar sesión
                </h2>
            </div>
            <form method="post" action="{{ url('/usuario/inicio') }}">
                <input type="hidden" name="_token" value="{{ csrf_token() }}">
                <div class="form-group">
                    <label>Correo electrónico:</label>
                    <input name="loginmail" type="text" class="form-control" placeholder="Dirección de correo electrónico">
                </div>
                <div class="form-group">
                    <label>Contraseña:</label>
                    <input name="password" type="password" class="form-control" placeholder="Ingresa tu contraseña">
                </div>
                <div class="forgot">
                    <a href="{{ url('/servicio/olvido') }}" class="base-anchor">
                        Olvidé mi contraseña
                    </a>
                </div>
                <div class="form-group">
                    <button class="btn btn-main btn-group-justified">
                        Entrar <i class="fa fa-sign-in"></i>
                    </button>
                </div>
            </form>
            {% if app.session.has('Message') %}
                <div class="alert {{ app.session.get('Message.class')}}">
                    <strong>{{ app.session.get('Message.bold')}}</strong> {{ app.session.get('Message.normal')}}
                </div>
            {% endif %}
        </div>
        <div class="aditional">
            <a href="{{ url('/servicio/registro') }}" class="">
                ¿Aún no tienes cuenta? <b>Regístrate</b>
            </a>
            <a href="{{ url('/servicio/reenviar') }}" class="">
                No recibí el correo de confirmación
            </a>
            <a href="{{ url('/acerca-de/preguntas-frecuentes') }}" class="">
                ¿Necesitas Ayuda? Consulta nuestras <b>Preguntas Frecuentes</b>
            </a>
        </div>
        <div class="identity">
            <hr>
            <div class="item">
                <img src="{{asset('/') }}assets/template/images/Logo_CDMX.png" width="170" alt="Secretaría de Obras de la CDMX">
                <img width="100" height="30" src="{{asset('/') }}assets/template/images/Logo_Dependencia_n.png" width="170" alt="Secretaría de Finanzas de la CDMX">
            </div>
            <hr>
        </div>
    </div>
</main>

<div class="cover">
    <img src="{{asset('/') }}images/decoration.png" alt="">
</div>

