{% extends 'recibosV.masterpbi' %}

{% block detalle %}
    <style type="text/css">
        .siguiente{
             page-break-after: always; 
        }
    </style>
	<div style="width:100%; display: block; ">
        <table class="tg2">
            <tr>
                <td valign="middle" colspan="5" rowspan="2" style="border-right-width:1px; font-size:10px; padding:2px; text-align:center;">
                    <strong>RECIBO COMPROBANTE DE LIQUIDACIÓN DE PAGO</strong>
                </td>
                <td colspan="1" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:6px 0px 6px 0px; text-align:center;">
                    NUM. EMPLEADO
                </td>
                <td colspan="3" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    <strong>{{ data.num_empleado }}</strong>
                </td>
                <td colspan="1" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    FOLIO FISCAL
                </td>
                <td colspan="5" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    <strong>{{ data.folio_fiscal }}</strong>
                </td>
            </tr>
            <tr>
                <td style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px; text-align:center">
                    CVE. ADSCRIPCIÓN
                </td>
                <td colspan="5" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px;">
                    <strong>{{ data.cve_adscripcion }}</strong>
                </td>
                <td style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    SECTOR
                </td>
                <td colspan="3" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center; ">
                    <strong>{{ data.sector }}</strong>
                </td>
            </tr>
            <tr>
                <td style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px 0px 0px; text-align:center;">
                    NOMBRE
                </td>
                <td colspan="5" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:6px 0px 6px 0px; text-align:center">
                    <strong>{{ data.nombre }}</strong>
                </td>
                <td colspan="2" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    R.F.C.
                </td>
                <td colspan="2" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    <strong>{{ data.rfc }}</strong>
                </td>
                <td style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    C.U.R.P.
                </td>
                <td colspan="4" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center; ">
                    <strong>{{ data.curp }}</strong>
                </td>
            </tr>
            <tr>
                <td style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px;text-align:center;">
                    CVE. EMPRESA
                </td>
                <td colspan="2" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    <strong>{{ data.cve_empresa }}</strong>
                </td>
                <td colspan="2" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px;text-align:center;">
                   CVE. PLAZA
                </td>
                <td style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px;text-align:center;">
                   <strong>{{ data.cve_plaza }}</strong>
                </td>
                <td colspan="3" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px;text-align:center;">
                    NUM. RECIBO
                </td>
                <td colspan="2" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 4px 0px 4px;">
                    <strong>{{ data.NumeroRecibo }}</strong>
                </td>
                <td style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px 0px 0px;text-align:center;">
                    GRADO
                </td>
                <td colspan="3" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px  0px 0px; text-align:center;">
                    <strong>{{ data.grado }}</strong>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:6px 0px 6px 0px; text-align:center"> 
                   DESCRIPCIÓN PUESTO
                </td>
                <td colspan="6" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px;text-align:center;">
                    <strong>{{ data.desc_puesto }}</strong>
                </td>
                <td colspan="2" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 4px 0px 4px; text-align:justify;"> 
                    SALARIO DIARIO
                </td>
                <td colspan="5" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px;text-align:center;">
                    <strong>$ {{ data.SalarioDiarioIntegrado }}</strong>
                </td>
            </tr>
            <tr>
                <td colspan="2"  style="border-left-width:1px; font-size:10px; padding:4px 0px 4px 0px; text-align:center;">
                    DEPENDENCIA
                </td>
                <td colspan="7"  style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px 0px 4px 0px; text-align:center;">
                    <strong>{{ data.dependenciaPBI }}</strong>
                </td>
                <td colspan="2" style="border-right-width:1px; font-size:10px; padding:4px 0px 4px 0px; text-align:center;">
                    PERÍODO DE PAGO
                </td>
                 <td colspan="4" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px 0px 4px 0px; text-align:center;">
                    <strong>{{ data.periodo_pago }}</strong>
                </td>
            </tr>
            <tr>
                <td colspan="15" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center; background-color:#000080; color: #ffffff;">
                    <strong>PERCEPCIONES</strong>
                </td>
            </tr>
            <tr>
                <td colspan="11" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    CONCEPTO
                </td>
                <td colspan="4" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    IMPORTE
                </td>
            </tr>
             <tr>
                <td colspan="11" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px 4px 0px 4px; text-align:justify; vertical-align: text-top">
                      {{ data.descripcionPercepcion|raw }}
                      <br>
                      {{ data.mensaje2 }}
                     
                </td>
                <td colspan="4" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px 4px 0px 4px; text-align:right; vertical-align: text-top">
                     {{ data.importePercepcion|raw }}
                </td>
            </tr>
            <tr>
                <td colspan="11" style="border-left-width:1px; font-size:10px; padding:2px 4px 2px 0px; text-align:right;">
                    TOTAL PERCEPCIONES
                </td>
                <td colspan="4" style=" border-right-width:1px; font-size:10px; padding:0px 0px 0px 4px; text-align:right;">
                    <strong> {{ data.totalPercepcion }} </strong>
                </td>
            </tr>
            <tr>
                 <td colspan="15" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center; background-color:#000080; color: #ffffff;">
                    <strong>DEDUCCIONES</strong>
                </td>
            </tr>
            <tr>
                <td colspan="11" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    CONCEPTO
                </td>
                <td colspan="4" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:center;">
                    IMPORTE
                </td>
            </tr>
             <tr>
                <td colspan="11" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px 4px 0px 4px;text-align:justify;">
                     {{ data.descripcionDeduccion|raw }}
                <td colspan="4" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px 4px 0px 4px; text-align:right;">
                     {{ data.importeDeduccion|raw }}
                </td>
            </tr>
            <tr>
                 <td colspan="11" style="border-left-width:1px; font-size:10px; padding:2px 4px 2px 0px; text-align:right;">
                    TOTAL DEDUCCIONES
                </td>
                <td colspan="4" style="border-right-width:1px; font-size:10px; padding:0px 4px 0px 0px; text-align:right;">
                    <strong> {{ data.totalDeduccion }}</strong>
                </td>
            </tr>
            <tr>
                <td colspan="10" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:0px 0px0 px 0px; text-align:justify;"></td>
                <td width="108" colspan="2" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px 4px 4px 4px; text-align:center; background-color:#000080; color: #ffffff;">
                   <strong> LIQUIDO A COBRAR</strong>
                </td>
                <td colspan="3" style="border-left-width:1px; border-right-width:1px; font-size:12px; padding:0px 0px 0px 0px; text-align:center;">
                   <strong> $ {{ data.liquido_cobrar }}</strong>
                </td>
            </tr>
            <tr>
                <td colspan="15" style="border-left-width:1px; border-right-width:1px; font-size:10px; padding:4px 6px 4px 6px;">
                    <strong>{{ data.mensaje }}</strong>
                </td>
            </tr>
        </table>
    </div>
    {% if data.bandera > 15 %}
    <div class="footer">
      <hr>
      <div style="width:260px; font-size:6px; text-align:left;float:left;">
        Página <span class="pagenum"></span> 
      </div>
      <div style="font-size:6px; text-align:center;float:left; width:220px;">
        ESTE DOCUMENTO ES UNA REPRESENTACIÓN IMPRESA DE UN CFDI
      </div>
      <div style="font-size:6px; text-align:right;float:left; width:200px;">
        FECHA DE IMPRESIÓN : {{ now|date('d/m/Y') }}
      </div>
    </div>    <span class="siguiente"></span>

    {% endif %}
{% endblock %}